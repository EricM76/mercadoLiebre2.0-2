<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>

    <div class="container">
      <section class="login">
        <div class="row productos">
          <div class="titulo col-12">

            <h2><%= title %></h2>

          </div>
          <div class="col-12">
            <div class="contenido">
              <div class="row py-3 px-5">
                <div class="col-12 col-md-5 col-lg-6 col-xl-4 d-flex flex-column justify-content-center">
                  <figure>
                  <img src="/images/logo-mercado-liebre.svg" alt="" class="w-75"/>
                  </figure>
                </div>
                <div class="col-12 col-md-7 col-lg-6 col-xl-8 ">
                  <form action="" method="POST" enctype="multipart/form-data">

                    <div class="form-row">

                      <div class="form-group col-12 col-xl-6">
                        <label for="nombre"></label>
                        <input type="text"
                        class="form-control <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>"
                        id="nombre"  name="nombre"  value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>" placeholder="nombre" requerid/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %> </small>
                      </div>

                      <div class="form-group col-12 col-xl-6">
                        <div class="custom-file mt-4">
                          <input type="file" class="custom-file-input " id="customFileLang" lang="en" name="logo" requerid>
                          <label class="custom-file-label" for="customFileLang">Logotipo</label>
                          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.logo)?errors.logo.msg: "" %> </small>
                        </div>
                      </div>

                    </div>
                   
                        <div class="col-12 col-lg-6 mt-2">
                          <button type="submit" class="btn btn-primary">
                            Agregar
                          </button>
                        </div>

                    </div>
                    
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

<!--scripts de bootstrap-->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js " integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj " crossorigin="anonymous "></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js " integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo " crossorigin="anonymous "></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js " integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI " crossorigin="anonymous "></script>  </body>
</html>
